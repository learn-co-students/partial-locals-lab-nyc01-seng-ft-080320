<%= form_tag students_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<% if flash[:my_errors] %>
    <%= flash[:my_errors] %>
<% end %>


<ul>
<% @students.each do |student| %>
  <li><%= render partial: 'student', locals: {student: student} %></li>
<% end %>
</ul>

<!-- this worked! -->
<% if params[:query] %>
<%= button_to("Back to Student Index", students_path, method: :get) %>
<% end %>